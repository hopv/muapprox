Check ar k =v
  ar 0 (\n.
    (n  = 0 => k 1) /\
    (n != 0 => k 0)
  ).

IsEqual ar1 ar2 k =v
  ar1 0 (\x1.
    ar2 0 (\x2.
      (x1 =  x2 => k 1) /\
      (x1 != x2 => k 0)
    )
  ).

Pred ar k =v
  ar 0 (\x.
    Update ar 0 (x - 1) k
  ).

Make_array k =v k (\i.\k'. k' 0).

Update ar i x k =v
  k (\j.\k'. (j = i => k' x) /\ (j != i => ar j k')).
