
%HES
Sentry =v
  ∀n.
    Square n (\r.
      ∀r1.
      r1 < 1 + n \/
      r1 < 1 - n \/
      r1 < 1 + r \/
      r1 < 1 - r \/
      r1 < 1 \/
      Loop r1 (\k. k r) (\replaced_exc_. true)
    ).

Loop r1 f k =v
  r1 > 0 /\
  f (\r.
    (r >  0 \/ k 0) /\
    (r <= 0 \/ Loop (r1 - 1) (\k1. k1 (r - 1)) k)
  ).

Square n k =v
  ∀r1.
    r1 < 1 + 1 * n \/
    r1 < 1 + -1 * n \/
    r1 < 1 \/
    Square_inner r1 n n k.

Square_inner r1 n m k =v
  r1 > 0 /\
  (m > 0 \/ k 0) /\
  (m <= 0 \/ Square_inner (r1 - 1) n (m - 1) (\r. k (n + r))).


